# - Find Vellemann K8055
# Find the native K8055 includes and library
# This module defines
#  K8055_INCLUDE_DIR, where to find owcapi.h, etc.
#  K8055_LIBRARIES, the libraries needed to use .
#  K8055_FOUND, If false, do not try to use owcapi etc.


FIND_PATH(K8055_INCLUDE_DIR k8055.h)

FIND_LIBRARY(K8055_LIBRARIES NAMES k8055)

IF (K8055_LIBRARIES AND K8055_INCLUDE_DIR)
  SET(K8055_FOUND "YES")
ELSE (K8055_LIBRARIES AND K8055_INCLUDE_DIR)
  SET(K8055_FOUND "NO")
ENDIF (K8055_LIBRARIES AND K8055_INCLUDE_DIR)

IF (K8055_FOUND)
   IF (NOT K8055_FIND_QUIETLY)
      MESSAGE(STATUS "Found K8055: ${K8055_LIBRARIES}")
   ENDIF (NOT K8055_FIND_QUIETLY)
ELSE (K8055_FOUND)
   IF (K8055_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find K8055 library, please configure K8055_LIBRARIES and K8055_INCLUDE_DIR")
   ENDIF (K8055_FIND_REQUIRED)
ENDIF (K8055_FOUND)

MARK_AS_ADVANCED(K8055_LIBRARIES K8055_INCLUDE_DIR)

